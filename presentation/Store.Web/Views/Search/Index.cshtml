@model Book[]

@{
    ViewData["Title"] = "Results of search";
}

<h1>Results of search</h1>

@if (Model.Length == 0)
{
    <p>Nothing found</p>
}
else
{
    <ul>
    @foreach (var book in Model)
    {
        <li><a href="@Url.Action("Index", "Book", new { id = book.Id })">@book.Title</a></li>
    }
    </ul>
}

